---
import { Image } from "astro:assets";
import faqMakerHome from "@/assets/FAQMaker-Home.png";
---

<section
  class="relative h-full bg-gradient-to-b from-black via-black to-teal-700"
>
  <div
    class="mx-auto flex h-full flex-col items-center justify-center px-8
  text-center text-white md:w-3/4"
  >
    <div class="flex flex-col items-center justify-center gap-4">
      <div class="mb-12 flex flex-col items-center justify-center gap-8">
        <h2 class="text-5xl font-bold">
          Centralize your company's internal knowledge
        </h2>
        <p class="text-xl font-bold text-secondary">
          Ask once <br /> Keep forever
        </p>
        <a
          class="w-fit cursor-pointer rounded-md bg-default px-16 py-2 font-bold uppercase transition-all duration-300 hover:bg-offset"
          style={{ fontVariants: "small-caps" }}>Start now</a
        >
      </div>
      <Image
        class="hidden max-w-3xl rounded-md shadow-xl md:block"
        src={faqMakerHome}
        alt=""
      />
    </div>
  </div>
</section>
