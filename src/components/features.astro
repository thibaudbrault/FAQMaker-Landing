---
import { Icon } from "astro-icon/components";
import ContentSection from "@/components/content-section.astro";
import type { FeatureItem } from "@/types";

const features: Array<FeatureItem> = [
  {
    title: "Questions / Answers",
    description: "FAQMaker is a hybrid between a Wiki and Stack Overflow.",
    icon: "ic:baseline-question-answer",
  },
  {
    title: "Intuitive editor",
    description: "Write detailed answers with its intuitive Markdown editor.",
    icon: "mdi:feather",
  },
  {
    title: "Customizable",
    description: "Use your brand's colors to make it your site.",
    icon: "ion:ios-color-palette",
    premium: true,
  },
  {
    title: "Slack Integration",
    description: "Connect your FAQMaker to Slack to never miss a new question.",
    icon: "ci:slack",
    premium: true,
  },
  {
    title: "Search",
    description: "Quickly find the information you're looking for.",
    icon: "cil:magnifying-glass",
  },
  {
    title: "Categorization",
    description: "Create your categories to better organize your questions.",
    icon: "mdi:tag",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    FAQMaker gives you the tools to build an <span class="text-primary"
      >internal knowledge base</span
    >. <br /> It allows your employees to <span class="text-primary"
      >quickly ask questions</span
    > and receive answers from colleagues.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon, premium }) => (
        <li class="group/item relative flex flex-col items-center gap-4 overflow-hidden rounded-md border border-default bg-offset p-7 transition-all duration-300 hover:border-primary">
          <div class="h-16 w-16 rounded-full border-2 border-current p-3 transition-all duration-300 group-hover/item:border-primary group-hover/item:text-primary">
            <Icon name={icon} class="h-full w-full" />
          </div>
          <p class="text-center text-xl font-extrabold transition-all duration-300 group-hover/item:text-primary">
            {title}
          </p>
          <p class="text-center text-sm text-offset">{description}</p>
          {premium && (
            <p class="absolute bottom-0 left-0 right-0 bg-primary text-center text-sm font-bold uppercase">
              Premium
            </p>
          )}
        </li>
      ))
    }
  </ul>
  <p class="text-2xl font-bold text-secondary">and more to come</p>
</ContentSection>
