---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center justify-center space-y-12"
>
  <div class="flex flex-col items-center gap-2">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center text-6xl font-extrabold leading-normal tracking-tight"
    >
      {title}
    </h2>
    <p class="max-w-xl text-center text-2xl font-extrabold">
      <slot name="lead" />
    </p>
  </div>
  <slot />
</section>
